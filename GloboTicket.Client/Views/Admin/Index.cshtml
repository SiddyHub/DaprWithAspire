@model IEnumerable<GloboTicket.Web.Models.Api.Event>


<div class="row">
    @if (Model.Count() == 0)
    {
        <text>No events were found.</text>
    }
    else
    {
        <table class="table">
            <thead>
                <tr class="columnHeader">
                    <th></th>
                    <th>DATE</th>
                    <th>NAME</th>
                    <th>ARTIST</th>
                    <th>PRICE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>
                            <img class="artistPic" src="@ev.ImageUrl" alt="Artist pic" />
                        </td>
                        <td>
                            @ev.Date.ToShortDateString()
                        </td>
                        <td>
                            @ev.Name
                        </td>
                        <td>
                            @ev.Artist
                        </td>
                        <td class="bold big">
                            $@ev.Price
                        </td>
                        <td>
                            <a class="btn-primary" type="button" asp-action="Details" asp-controller="Admin" asp-route-eventId="@ev.EventId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

